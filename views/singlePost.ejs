<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
    

      <% if(!userlogin){ %>
        <%-include('./partials/navbarLogin.ejs') %>
      <% } else { %>
        <%-include('./partials/navbar.ejs') %>
      <% } %>

    <div class="container">
      <div class="container">
        <div class="row">
          <div class="col-md-10 offset-md-1">

              <div class="card border-dark mb-3" style="max-width: 60rem; margin-top:20px ">
                  <div class="card-header"><%= data.title %></div>
                  <div class="card-body text-dark">
                    <p class="card-text"><%- data.content %></p>
                    <% let DataCat = "" %>
                    <% for (let i = 0; i < data.PostCats.length; i++) { %>
                           <% DataCat += "#" + data.PostCats[i].Category.name + " " %>
                      
                    <% } %>
                    <div class="card-footer bg-transparent border-success"><%= DataCat  %></div>
                  </div>
                </div>



                <% for (let i = 0; i < comment.length; i++) { %>
                  <div class="card border-dark mb-3" style="max-width: 60rem;">
                      <div class="card-header">Comment By: <%= userlogin %></div>
                      <div class="card-body text-dark">
                        <p class="card-text"><%= comment[i].content%></p>
                      </div>
                    </div>
                 
                <% } %>




                <form action="/post/<%= data.id %>/addComment" method="POST">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Add Comment Here:</label>
                        <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                      </div>  
                      <button type="submit" class="btn btn-primary">Add Comment</button>
                </form>



          </div>
        </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>